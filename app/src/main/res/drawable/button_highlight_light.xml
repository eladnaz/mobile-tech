<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/themeLight"
                android:endColor="@color/themeLightHighlight"
                android:angle="270" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_focused="true">
        <shape>
            <gradient
                android:startColor="@color/themeLight"
                android:endColor="@color/themeLightHighlight"
                android:angle="270" />
        </shape>
    </item>
    <item android:drawable="@color/themeLight" android:state_enabled="true"/>
</selector>